<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed to call http://10.0.2.2:8080 from the Android app -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Receive BOOT_COMPLETED so we can reschedule medication alarms after reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- â˜… Needed for setExactAndAllowWhileIdle on Android 12+ -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Runtime notifications permission (Android 13+) -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Docs"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Auth gate is the entry point -->
        <activity
            android:name=".presentation.auth.AuthGateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.auth.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.auth.SignupActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.onboarding.PatientOnboardingActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.onboarding.DoctorPracticeSetupActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.onboarding.DoctorProfileOnboardingActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.profile.ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Medication reminder receiver for AlarmManager -->
        <receiver
            android:name=".presentation.medication.MedicationReminderReceiver"
            android:exported="false" />

        <!-- Boot receiver: reschedule all medication reminders after reboot -->
        <receiver
            android:name=".presentation.medication.MedicationBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
