<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed to call http://10.0.2.2:8080 from the Android app -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Docs"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Auth gate is the entry point -->
        <activity
            android:name=".presentation.auth.AuthGateActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name=".presentation.auth.LoginActivity"
            android:exported="false" />

        <!-- Signup screen -->
        <activity
            android:name=".presentation.auth.SignupActivity"
            android:exported="false" />

        <!-- Profile screen (hosts ProfileFragment) -->
        <activity
            android:name=".presentation.profile.ProfileActivity"
            android:exported="false" />

        <!-- MainActivity (home/dashboard with drawer + bottom nav) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
