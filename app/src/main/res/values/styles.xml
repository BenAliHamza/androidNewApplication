<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Docs.DrawerTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/color_drawer_header_on_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Docs.DrawerSubtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/color_drawer_header_on_bg_secondary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Profile: role chip style -->
    <style name="Widget.Docs.Chip.Role" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinHeight">28dp</item>
        <item name="chipBackgroundColor">@color/color_profile_role_bg</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/color_profile_role_text</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>

    <!-- Flags chips (accepting new, teleconsultation) -->
    <style name="Widget.Docs.Chip.Flag" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinHeight">32dp</item>
        <item name="chipBackgroundColor">@color/color_surface</item>
        <item name="chipStrokeColor">@color/color_on_surface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>

</resources>
