<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft teal background using your existing palette -->
    <solid android:color="@color/color_primary_soft" />

    <!-- Big radius to make it a pill -->
    <corners android:radius="999dp" />

    <!-- Optional: small horizontal padding if used as background for text -->
    <padding
        android:left="12dp"
        android:top="4dp"
        android:right="12dp"
        android:bottom="4dp" />
</shape>
