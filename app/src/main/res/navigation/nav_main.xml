<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="tn.esprit.presentation.home.HomeFragment"
        android:label="@string/home_title" >

        <!-- From Home to patient appointment -->
        <action
            android:id="@+id/action_homeFragment_to_patientAppointmentFragment"
            app:destination="@id/patientAppointmentFragment" />

        <!-- From Home to doctor appointments -->
        <action
            android:id="@+id/action_homeFragment_to_doctorAppointmentsFragment"
            app:destination="@id/doctorAppointmentsFragment" />
    </fragment>

    <!-- Patient appointments -->
    <fragment
        android:id="@+id/patientAppointmentFragment"
        android:name="tn.esprit.presentation.appointments.PatientAppointmentFragment"
        android:label="Prendre rendez-vous"
        app:enterAnim="@android:anim/slide_in_left"
        app:exitAnim="@android:anim/slide_out_right" />

    <!-- Doctor appointments -->
    <fragment
        android:id="@+id/doctorAppointmentsFragment"
        android:name="tn.esprit.presentation.appointments.DoctorAppointmentsFragment"
        android:label="Mes rendez-vous"
        app:enterAnim="@android:anim/slide_in_left"
        app:exitAnim="@android:anim/slide_out_right" />

    <!-- Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="tn.esprit.presentation.profile.ProfileFragment"
        android:label="@string/profile_title">

        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />

        <action
            android:id="@+id/action_profileFragment_to_editPatientProfileFragment"
            app:destination="@id/editPatientProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileEditFragment"
        android:name="tn.esprit.presentation.profile.ProfileEditFragment"
        android:label="@string/profile_edit_title">

        <action
            android:id="@+id/action_profileEditFragment_to_userBaseInfoFragment"
            app:destination="@id/userBaseInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/editPatientProfileFragment"
        android:name="tn.esprit.presentation.profile.EditPatientProfileFragment"
        android:label="@string/profile_patient_edit_title">

        <action
            android:id="@+id/action_editPatientProfileFragment_to_userBaseInfoFragment"
            app:destination="@id/userBaseInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/userBaseInfoFragment"
        android:name="tn.esprit.presentation.profile.UserBaseInfoFragment"
        android:label="Base info">

        <action
            android:id="@+id/action_userBaseInfoFragment_to_userBaseInfoEditFragment"
            app:destination="@id/userBaseInfoEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/userBaseInfoEditFragment"
        android:name="tn.esprit.presentation.profile.UserBaseInfoEditFragment"
        android:label="Edit base info" />

</navigation>
