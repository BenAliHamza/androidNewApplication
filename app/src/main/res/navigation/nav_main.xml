<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeGateFragment">

    <!-- Gate fragment: decides where to go once role is known -->
    <fragment
        android:id="@+id/homeGateFragment"
        android:name="tn.esprit.presentation.home.HomeGateFragment"
        android:label="@string/home_header_title" />

    <!-- Doctor/patient role-aware home container -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="tn.esprit.presentation.home.HomeFragment"
        android:label="@string/home_title" />

    <!-- Doctor patients list (doctor role) -->
    <fragment
        android:id="@+id/doctorPatientsFragment"
        android:name="tn.esprit.presentation.home.DoctorPatientsFragment"
        android:label="@string/doctor_patients_title">

        <action
            android:id="@+id/action_doctorPatientsFragment_to_patientPublicProfileFragment"
            app:destination="@id/patientPublicProfileFragment" />
    </fragment>

    <!-- Patient home: search-based experience -->
    <fragment
        android:id="@+id/patientHomeFragment"
        android:name="tn.esprit.presentation.home.PatientHomeFragment"
        android:label="@string/home_title">

        <action
            android:id="@+id/action_patientHomeFragment_to_doctorPublicProfileFragment"
            app:destination="@id/doctorPublicProfileFragment" />

        <action
            android:id="@+id/action_patientHomeFragment_to_patientIndicatorsFragment"
            app:destination="@id/patientIndicatorsFragment" />
    </fragment>

    <!-- Doctor public profile / landing screen -->
    <fragment
        android:id="@+id/doctorPublicProfileFragment"
        android:name="tn.esprit.presentation.home.DoctorPublicProfileFragment"
        android:label="@string/doctor_public_title">

        <argument
            android:name="doctorId"
            app:argType="long" />

        <action
            android:id="@+id/action_doctorPublicProfileFragment_to_patientAppointmentsFragment"
            app:destination="@id/patientAppointmentsFragment" />
    </fragment>

    <!-- Patient public profile (doctor view) -->
    <fragment
        android:id="@+id/patientPublicProfileFragment"
        android:name="tn.esprit.presentation.home.PatientPublicProfileFragment"
        android:label="@string/patient_public_title">

        <argument
            android:name="patientId"
            app:argType="long" />
    </fragment>

    <!-- Patient indicators screen (self) -->
    <fragment
        android:id="@+id/patientIndicatorsFragment"
        android:name="tn.esprit.presentation.home.PatientIndicatorsFragment"
        android:label="@string/patient_indicators_title" />

    <!-- Patient medications screen (self) -->
    <fragment
        android:id="@+id/patientMedicationsFragment"
        android:name="tn.esprit.presentation.medication.PatientMedicationsFragment"
        android:label="@string/patient_medications_title" />

    <!-- Patient appointments screen (self) -->
    <fragment
        android:id="@+id/patientAppointmentsFragment"
        android:name="tn.esprit.presentation.appointment.PatientAppointmentsFragment"
        android:label="@string/patient_appointments_title" />

    <!-- Doctor appointments screen (self) -->
    <fragment
        android:id="@+id/doctorAppointmentsFragment"
        android:name="tn.esprit.presentation.appointment.DoctorAppointmentsFragment"
        android:label="@string/doctor_appointments_title" />

    <!-- Profile root -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="tn.esprit.presentation.profile.ProfileFragment"
        android:label="@string/profile_title">

        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />

        <action
            android:id="@+id/action_profileFragment_to_editPatientProfileFragment"
            app:destination="@id/editPatientProfileFragment" />

        <!-- NEW: open base user info from profile header contact line -->
        <action
            android:id="@+id/action_profileFragment_to_userBaseInfoFragment"
            app:destination="@id/userBaseInfoFragment" />
    </fragment>

    <!-- Doctor edit profile fragment -->
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="tn.esprit.presentation.profile.ProfileEditFragment"
        android:label="@string/profile_edit_title">

        <action
            android:id="@+id/action_profileEditFragment_to_userBaseInfoFragment"
            app:destination="@id/userBaseInfoFragment" />
    </fragment>

    <!-- Patient edit profile fragment -->
    <fragment
        android:id="@+id/editPatientProfileFragment"
        android:name="tn.esprit.presentation.profile.EditPatientProfileFragment"
        android:label="@string/profile_patient_edit_title">

        <action
            android:id="@+id/action_editPatientProfileFragment_to_userBaseInfoFragment"
            app:destination="@id/userBaseInfoFragment" />
    </fragment>

    <!-- Base user info display -->
    <fragment
        android:id="@+id/userBaseInfoFragment"
        android:name="tn.esprit.presentation.profile.UserBaseInfoFragment"
        android:label="Base info">

        <action
            android:id="@+id/action_userBaseInfoFragment_to_userBaseInfoEditFragment"
            app:destination="@id/userBaseInfoEditFragment" />
    </fragment>

    <!-- Base user info edit -->
    <fragment
        android:id="@+id/userBaseInfoEditFragment"
        android:name="tn.esprit.presentation.profile.UserBaseInfoEditFragment"
        android:label="Edit base info" />

    <!-- Doctor office: schedule summary & entrypoint to edit -->
    <fragment
        android:id="@+id/doctorOfficeFragment"
        android:name="tn.esprit.presentation.home.DoctorOfficeFragment"
        android:label="@string/doctor_office_title">

        <action
            android:id="@+id/action_doctorOfficeFragment_to_doctorScheduleEditFragment"
            app:destination="@id/doctorScheduleEditFragment" />
    </fragment>

    <!-- Doctor schedule edit screen -->
    <fragment
        android:id="@+id/doctorScheduleEditFragment"
        android:name="tn.esprit.presentation.home.DoctorScheduleEditFragment"
        android:label="@string/doctor_office_edit_title" />

    <!-- Notifications list screen -->
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="tn.esprit.presentation.notification.NotificationListFragment"
        android:label="Notifications" />

    <!-- User history screen -->
    <fragment
        android:id="@+id/userHistoryFragment"
        android:name="tn.esprit.presentation.history.UserHistoryFragment"
        android:label="@string/history_title" />

</navigation>
