<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="tn.esprit.presentation.home.HomeFragment">

    <!-- Scrollable content area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Highlight card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_highlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_highlight"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/text_highlight_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_highlight_title"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_highlight_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/home_highlight_subtitle"
                        android:textColor="#E0F2F1"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats row -->
            <LinearLayout
                android:id="@+id/layout_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_stat"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/text_stat_today_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/color_on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/home_stats_today_label"
                        android:textColor="@color/color_on_background_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_stat"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:id="@+id/text_stat_week_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="@color/color_on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/home_stats_week_label"
                        android:textColor="@color/color_on_background_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_stat"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/text_stat_patients_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textColor="@color/color_on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/home_stats_patients_label"
                        android:textColor="@color/color_on_background_secondary"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quick actions title -->
            <TextView
                android:id="@+id/text_quick_actions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/home_quick_actions_title"
                android:textColor="@color/color_on_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Quick actions row -->
            <LinearLayout
                android:id="@+id/layout_quick_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chip_quick_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_outline"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="@string/home_quick_book"
                    android:textColor="@color/color_on_background"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chip_quick_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_outline"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="@string/home_quick_messages"
                    android:textColor="@color/color_on_background"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chip_quick_reports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_outline"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="@string/home_quick_reports"
                    android:textColor="@color/color_on_background"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
