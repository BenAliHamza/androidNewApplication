<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="tn.esprit.presentation.onboarding.PatientOnboardingActivity">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/onboarding_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/onboarding_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Small pill / step label -->
            <TextView
                android:id="@+id/onboarding_step_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="@string/onboarding_patient_step_label"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/color_primary_variant"
                android:background="@drawable/bg_onboarding_step_pill"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <!-- Title -->
            <TextView
                android:id="@+id/onboarding_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/onboarding_patient_title"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="@color/color_on_background" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/onboarding_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/onboarding_patient_subtitle"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/color_on_background_secondary" />

            <!-- Card with form -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/onboarding_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/color_primary_soft"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section label -->
                    <TextView
                        android:id="@+id/text_section_basic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarding_patient_section_basic"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/color_on_background" />

                    <!-- Row: DOB + gender -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/onboarding_patient_dob_hint"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/color_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:hint="YYYY-MM-DD" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="0dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/onboarding_patient_gender_hint"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/color_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Blood type -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/onboarding_patient_blood_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_blood_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:maxLength="3"
                            tools:text="O+" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Row: height + weight -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/onboarding_patient_height_hint"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/color_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_height_cm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="@string/onboarding_patient_height_suffix" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="0dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/onboarding_patient_weight_hint"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/color_primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_weight_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="@string/onboarding_patient_weight_suffix" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Section label: contact -->
                    <TextView
                        android:id="@+id/text_section_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/onboarding_patient_section_contact"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/color_on_background" />

                    <!-- Address -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/onboarding_patient_address_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPostalAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- City -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/onboarding_patient_city_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Country -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/onboarding_patient_country_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            tools:text="Tunisia" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Marital status -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/onboarding_patient_marital_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_marital_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Lifestyle -->
                    <TextView
                        android:id="@+id/text_lifestyle_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/onboarding_patient_lifestyle_label"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="@color/color_on_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <CheckBox
                            android:id="@+id/check_smoker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_patient_smoker_label"
                            android:textColor="@color/color_on_background_secondary" />

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="0dp" />

                        <CheckBox
                            android:id="@+id/check_alcohol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_patient_alcohol_label"
                            android:textColor="@color/color_on_background_secondary" />
                    </LinearLayout>

                    <!-- Notes -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/onboarding_patient_notes_hint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="5" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Hint + buttons -->
                    <TextView
                        android:id="@+id/onboarding_hint_later"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/onboarding_patient_hint_later"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_complete_profile"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/onboarding_patient_button_complete"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:cornerRadius="18dp"
                        app:backgroundTint="@color/color_primary"
                        android:textColor="@color/color_on_primary"
                        app:rippleColor="@color/color_primary_ripple" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_skip_for_now"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/onboarding_patient_button_skip"
                        android:textAllCaps="false"
                        app:cornerRadius="18dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/onboarding_loading_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/onboarding_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
