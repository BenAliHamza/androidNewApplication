<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_doctor_appointment_detail_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/color_surface"
    tools:context="tn.esprit.presentation.appointment.DoctorAppointmentDetailBottomSheet">

    <!-- Title -->
    <TextView
        android:id="@+id/text_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doctor_appointment_detail_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_on_background"
        tools:text="Appointment details" />

    <!-- Patient name -->
    <TextView
        android:id="@+id/text_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/color_on_background"
        tools:text="John Doe" />

    <!-- Date / time -->
    <TextView
        android:id="@+id/text_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/color_on_background_secondary"
        tools:text="Today • 09:00 – 09:30" />

    <!-- Status chip -->
    <TextView
        android:id="@+id/text_status_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_chip_outline"
        tools:text="Accepted" />

    <!-- Teleconsultation -->
    <TextView
        android:id="@+id/text_teleconsultation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:textColor="@color/color_primary_variant"
        android:visibility="gone"
        tools:text="Teleconsultation" />

    <!-- Reason -->
    <TextView
        android:id="@+id/text_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="@color/color_on_background"
        android:visibility="gone"
        tools:text="Reason: follow-up on blood test results" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="#EEEEEE" />

    <!-- View profile CTA -->
    <TextView
        android:id="@+id/text_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:text="@string/doctor_appointment_detail_view_profile"
        android:textColor="@color/color_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="View patient profile" />

</LinearLayout>
