<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_doctor_appointment_detail_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/color_surface">

    <!-- Title -->
    <TextView
        android:id="@+id/text_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doctor_appointment_detail_title"
        android:textColor="@color/color_on_background"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Patient name -->
    <TextView
        android:id="@+id/text_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/color_on_background"
        tools:text="John Doe" />

    <!-- Date / time -->
    <TextView
        android:id="@+id/text_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        android:textColor="@color/color_on_background_secondary"
        tools:text="Thu, 28 Nov  •  09:00 – 09:30" />

    <!-- Status chip -->
    <TextView
        android:id="@+id/text_status_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="Pending" />

    <!-- Teleconsultation -->
    <TextView
        android:id="@+id/text_teleconsultation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/appointment_teleconsultation_label"
        android:textSize="13sp"
        android:textColor="@color/color_primary_variant"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- Reason -->
    <TextView
        android:id="@+id/text_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="@color/color_on_background"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Reason goes here lorem ipsum dolor sit amet, consectetur adipiscing elit." />

    <!-- View profile action -->
    <TextView
        android:id="@+id/text_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/doctor_appointment_detail_view_profile"
        android:textColor="@color/color_primary"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
