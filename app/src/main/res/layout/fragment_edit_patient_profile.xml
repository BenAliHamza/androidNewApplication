<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_patient_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tn.esprit.presentation.profile.EditPatientProfileFragment">

    <!-- Main content with toolbar + fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_edit_patient"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="@string/profile_patient_edit_title"
            app:navigationIcon="@android:drawable/ic_media_previous" />

        <!-- Content scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- DOB -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:helperText="@string/profile_dob_helper">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_dob_hint"
                        android:inputType="date"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:cursorVisible="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_gender_hint"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Blood type -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_blood_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_blood_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_blood_hint"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Height -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_height_cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:helperText="@string/profile_height_helper">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_height_cm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_height_hint"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Weight -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_weight_kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:helperText="@string/profile_weight_helper">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_weight_kg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_weight_hint"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_address_hint"
                        android:inputType="textPostalAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- City -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_city_hint"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Country -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_country_hint"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Marital status -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_marital_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_marital_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_marital_hint"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:helperText="@string/profile_notes_helper">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/onboarding_patient_notes_hint"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="5" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Lifestyle checkboxes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_smoker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/onboarding_patient_smoker" />

                    <CheckBox
                        android:id="@+id/check_alcohol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/onboarding_patient_alcohol" />
                </LinearLayout>

                <!-- Save and Base Info buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_complete_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/onboarding_patient_button_complete" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_base_info_button" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/edit_patient_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>
