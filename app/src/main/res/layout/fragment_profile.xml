<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="tn.esprit.presentation.profile.ProfileFragment">

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/profile_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_profile_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/image_profile_avatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/logo"
                            android:contentDescription="@string/app_name" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="@color/color_on_background"
                                android:textStyle="bold"
                                tools:text="Dr. Jane Doe" />

                            <TextView
                                android:id="@+id/text_profile_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="@color/color_on_background_secondary"
                                tools:text="jane.doe@example.com" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_profile_role_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip_outline"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/color_on_background"
                            android:textStyle="bold"
                            tools:text="Doctor" />
                    </LinearLayout>

                    <!-- Second row: phone + status chip -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text_profile_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/color_on_background"
                            tools:text="+216 21 234 567" />

                        <TextView
                            android:id="@+id/text_profile_status_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip_outline"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="@color/color_on_background_secondary"
                            android:textAllCaps="false"
                            tools:text="ACTIVE" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/group_doctor_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/text_doctor_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_section_doctor_title"
                        android:textColor="@color/color_on_background"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_doctor_clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Central Clinic, 12 Avenue Habib Bourguiba" />

                    <TextView
                        android:id="@+id/text_doctor_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Tunis, Tunisia" />

                    <TextView
                        android:id="@+id/text_doctor_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_background"
                        tools:text="8 years of experience" />

                    <TextView
                        android:id="@+id/text_doctor_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Registration: 123456" />

                    <TextView
                        android:id="@+id/text_doctor_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_background"
                        tools:text="Consultation: 80.000 TND" />

                    <TextView
                        android:id="@+id/text_doctor_flags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Accepting new patients • Teleconsultation available" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Patient section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/group_patient_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/text_patient_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_section_patient_title"
                        android:textColor="@color/color_on_background"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_patient_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="1994-07-21" />

                    <TextView
                        android:id="@+id/text_patient_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Female" />

                    <TextView
                        android:id="@+id/text_patient_blood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Blood type: O+" />

                    <TextView
                        android:id="@+id/text_patient_height_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_background"
                        tools:text="170 cm • 65 kg" />

                    <TextView
                        android:id="@+id/text_patient_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Rue de la Santé, Ariana, Tunisia" />

                    <TextView
                        android:id="@+id/text_patient_lifestyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="@color/color_on_background_secondary"
                        tools:text="Non-smoker • No alcohol" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/profile_loading_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/profile_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
