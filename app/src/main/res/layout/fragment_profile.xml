<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="tn.esprit.presentation.profile.ProfileFragment">

    <!-- Progress while loading profile -->
    <ProgressBar
        android:id="@+id/profile_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- IMPORTANT: only ONE direct child inside NestedScrollView -->
        <LinearLayout
            android:id="@+id/profile_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Avatar + basic header (common for DOCTOR & PATIENT) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_profile_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image_profile_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/profile_title" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Optional header name (not used in Java yet, safe to keep) -->
                        <TextView
                            android:id="@+id/text_profile_header_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            android:textStyle="bold"
                            tools:text="Strange Doctor" />

                        <!-- Optional header role -->
                        <TextView
                            android:id="@+id/text_profile_header_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="Doctor" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_change_avatar"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_edit_title"
                        android:textAllCaps="false"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/section_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        tools:text="Dr. Strange Doctor" />

                    <TextView
                        android:id="@+id/text_profile_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Pediatrics" />

                    <TextView
                        android:id="@+id/text_profile_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="Ariana, Tunisia" />

                    <TextView
                        android:id="@+id/text_profile_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="80 TND" />

                    <TextView
                        android:id="@+id/text_profile_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="Short doctor bio goes here…" />

                    <TextView
                        android:id="@+id/text_profile_accepts_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="@string/profile_flag_accepts_new" />

                    <TextView
                        android:id="@+id/text_profile_teleconsultation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="@string/profile_flag_teleconsultation" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Patient section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/section_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_patient_blood_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="Blood type O+" />

                    <TextView
                        android:id="@+id/text_patient_height_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="180 cm • 75 kg" />

                    <TextView
                        android:id="@+id/text_patient_flags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="Non-smoker • No alcohol use" />

                    <TextView
                        android:id="@+id/text_patient_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        tools:text="Additional notes…" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Common edit button (role decides behaviour in ProfileFragment) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_edit_profile"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/profile_edit_title"
                android:textAllCaps="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
