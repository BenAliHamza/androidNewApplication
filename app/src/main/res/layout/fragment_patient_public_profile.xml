<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_public_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="tn.esprit.presentation.home.PatientPublicProfileFragment">

    <ProgressBar
        android:id="@+id/patient_public_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/patient_public_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Patient info section title -->
            <TextView
                android:id="@+id/text_patient_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_public_info_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_on_background"
                android:layout_marginBottom="8dp" />

            <!-- Patient info card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_patient_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_patient_avatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo"
                            android:contentDescription="@string/patient_public_title" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/color_on_background"
                                tools:text="Patient #123" />

                            <TextView
                                android:id="@+id/text_patient_meta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="13sp"
                                android:textColor="@color/color_on_background_secondary"
                                tools:text="35 Â· Female" />

                            <TextView
                                android:id="@+id/text_patient_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textSize="13sp"
                                android:textColor="@color/color_on_background_secondary"
                                tools:text="Tunis, Tunisia" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_patient_flags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_patient_blood_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:text="Blood type O+" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_patient_smoker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:text="Non-smoker" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_patient_alcohol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:text="No alcohol use" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Indicators section title -->
            <TextView
                android:id="@+id/text_patient_indicators_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_public_indicators_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_on_background"
                android:layout_marginBottom="8dp" />

            <!-- Indicators empty state (shown until we have real data) -->
            <TextView
                android:id="@+id/text_patient_indicators_empty_for_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_public_indicators_empty"
                android:textSize="13sp"
                android:textColor="@color/color_on_background_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Indicators list (doctor view, read-only) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_patient_indicators_for_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="16dp"
                tools:listitem="@layout/item_patient_indicator" />

            <!-- Medications section header: title + "Add" CTA -->
            <LinearLayout
                android:id="@+id/layout_patient_medications_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/text_patient_medications_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/patient_public_medications_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_on_background" />

                <TextView
                    android:id="@+id/text_patient_medications_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_public_medications_add_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />
            </LinearLayout>

            <!-- Medications empty state -->
            <TextView
                android:id="@+id/text_patient_medications_empty_for_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_public_medications_empty"
                android:textSize="13sp"
                android:textColor="@color/color_on_background_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Medications list (prescriptions list; doctor view) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_patient_medications_for_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_patient_prescription" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
