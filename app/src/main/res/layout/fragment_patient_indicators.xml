<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/patient_indicators_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/color_background">

    <!-- Filter row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/text_indicator_filter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_indicators_filter_label"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/spinner_indicator_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/patient_indicators_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <!-- Empty text -->
    <TextView
        android:id="@+id/text_patient_indicators_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_indicators_empty"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/color_on_background_secondary"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone" />

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_patient_indicators"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Add indicator button -->
    <Button
        android:id="@+id/button_add_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_indicators_add_button"
        android:layout_marginTop="8dp" />

</LinearLayout>
