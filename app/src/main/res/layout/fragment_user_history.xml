<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context="tn.esprit.presentation.history.UserHistoryFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/history_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/history_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/text_history_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/history_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_history_header_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/history_subtitle"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/color_on_background_secondary"
                tools:text="Your recent activity and updates in one place." />

            <!-- Filters row -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/history_chip_group_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_history_filter_all"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_filter_all"
                    android:checkable="true"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_history_filter_appointments"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_filter_appointments"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_history_filter_medications"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_filter_medications"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_history_filter_indicators"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_filter_indicators"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_history_filter_profile"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_filter_profile"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_history_filter_other"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_filter_other"
                    android:checkable="true" />
            </com.google.android.material.chip.ChipGroup>

            <!-- List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_user_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="4dp"
                tools:listitem="@layout/item_user_history" />

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Progress overlay -->
    <ProgressBar
        android:id="@+id/history_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/text_history_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/history_empty_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/color_on_background_secondary"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="No history yet.\nYour activity will appear here." />

</FrameLayout>
