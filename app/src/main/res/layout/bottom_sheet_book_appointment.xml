<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_appointment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_surface"
    android:paddingTop="16dp"
    android:paddingBottom="24dp">

    <!-- Close button -->
    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/color_on_background_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Doctor name -->
    <TextView
        android:id="@+id/text_doctor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="56dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_on_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_close" />

    <!-- Doctor specialty -->
    <TextView
        android:id="@+id/text_doctor_specialty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:textSize="13sp"
        android:textColor="@color/color_on_background_secondary"
        app:layout_constraintTop_toBottomOf="@id/text_doctor_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section title -->
    <TextView
        android:id="@+id/text_choose_time_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/doctor_book_choose_time_title"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/color_on_background"
        app:layout_constraintTop_toBottomOf="@id/text_doctor_specialty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Week toggle: This week / Next week -->
    <LinearLayout
        android:id="@+id/layout_week_toggle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_choose_time_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chip_week_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip_outline"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="This week"
            android:textSize="12sp"
            android:textColor="@color/color_on_background" />

        <TextView
            android:id="@+id/chip_week_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_chip_outline"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Next week"
            android:textSize="12sp"
            android:textColor="@color/color_on_background_secondary" />
    </LinearLayout>

    <!-- Days tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:tabMode="scrollable"
        app:tabGravity="start"
        app:tabIndicatorFullWidth="false"
        app:tabTextColor="@color/color_on_background_secondary"
        app:tabSelectedTextColor="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@id/layout_week_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress for calendar -->
    <ProgressBar
        android:id="@+id/progress_calendar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabs_days"
        app:layout_constraintBottom_toTopOf="@id/recycler_slots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Slots grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_slots"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty text -->
    <TextView
        android:id="@+id/text_slots_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/doctor_book_no_slots_day"
        android:textColor="@color/color_on_background_secondary"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabs_days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reason input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_reason"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:hint="@string/doctor_book_reason_hint"
        app:layout_constraintTop_toBottomOf="@id/recycler_slots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Teleconsultation switch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_teleconsultation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/doctor_book_teleconsultation_label"
        app:layout_constraintTop_toBottomOf="@id/input_layout_reason"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Confirm button + progress -->
    <LinearLayout
        android:id="@+id/layout_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/switch_teleconsultation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/doctor_book_confirm"
            android:enabled="false" />

        <ProgressBar
            android:id="@+id/progress_confirm"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
