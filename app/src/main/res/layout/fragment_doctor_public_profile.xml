<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctor_public_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <ProgressBar
        android:id="@+id/doctor_public_progress"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/doctor_public_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doctor_public_error_generic"
        android:textSize="14sp"
        android:textColor="@color/color_on_background_secondary"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/doctor_public_content_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/doctor_public_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/doctor_public_avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doctor_public_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_on_background"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/doctor_public_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_on_background_secondary"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/doctor_public_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:textColor="@color/color_on_background_secondary"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

            <!-- Flags -->
            <LinearLayout
                android:id="@+id/doctor_public_flags_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_doctor_accepting_new"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_flag_accepts_new"
                    android:visibility="gone" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_doctor_teleconsultation"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/profile_flag_teleconsultation"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- About card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_doctor_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_stat"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/doctor_public_about_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_public_about_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_on_background" />

                    <TextView
                        android:id="@+id/doctor_public_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_on_background_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/doctor_public_experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_on_background_secondary" />

                        <TextView
                            android:id="@+id/doctor_public_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:textSize="12sp"
                            android:textColor="@color/color_on_background_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Clinic card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_doctor_clinic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_stat"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/doctor_public_clinic_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_public_clinic_title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_on_background" />

                    <TextView
                        android:id="@+id/doctor_public_clinic_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_on_background_secondary" />

                    <TextView
                        android:id="@+id/doctor_public_clinic_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:textColor="@color/color_on_background_secondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Acts section -->
            <TextView
                android:id="@+id/doctor_public_acts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/doctor_public_acts_title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/color_on_background" />

            <TextView
                android:id="@+id/text_doctor_acts_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/doctor_public_acts_empty"
                android:textSize="13sp"
                android:textColor="@color/color_on_background_secondary"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_doctor_acts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
