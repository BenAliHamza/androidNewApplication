<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Progress bar (shown while loading) -->
        <ProgressBar
            android:id="@+id/doctor_public_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- Error container (shown when load fails) -->
        <LinearLayout
            android:id="@+id/doctor_public_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/doctor_public_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctor_public_error_generic"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <!-- Main content container (shown when data loads) -->
        <LinearLayout
            android:id="@+id/doctor_public_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: avatar + name + specialty + location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_doctor_avatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/doctor_public_title"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="@string/doctor_public_name_placeholder" />

                    <TextView
                        android:id="@+id/text_doctor_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/doctor_public_specialty_placeholder" />

                    <TextView
                        android:id="@+id/text_doctor_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/doctor_public_location_placeholder" />
                </LinearLayout>
            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Status chips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_accepting_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_public_flag_accepts_new"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_teleconsultation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_public_flag_teleconsultation" />
            </LinearLayout>

            <!-- Consultation fee -->
            <TextView
                android:id="@+id/text_consultation_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/doctor_public_fee_placeholder" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- About section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor_public_about_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/doctor_public_bio_placeholder" />

            <TextView
                android:id="@+id/text_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/doctor_public_experience_placeholder" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Clinic section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor_public_clinic_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_clinic_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/doctor_public_clinic_address_placeholder" />

            <TextView
                android:id="@+id/text_clinic_city_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/doctor_public_location_placeholder" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Acts section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor_public_acts_title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_acts_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/doctor_public_acts_empty"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_acts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- CTAs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/doctor_public_cta_book" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/button_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/doctor_public_cta_message" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
