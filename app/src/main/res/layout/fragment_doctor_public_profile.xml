<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctor_public_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/doctor_public_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Progress bar (shown while loading) -->
        <ProgressBar
            android:id="@+id/doctor_public_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- Error container (shown when load fails) -->
        <LinearLayout
            android:id="@+id/doctor_public_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/doctor_public_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctor_public_error_generic"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <!-- Main content container (shown when data loads) -->
        <LinearLayout
            android:id="@+id/doctor_public_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Hero card: avatar + identity + flags + fee -->
            <LinearLayout
                android:id="@+id/doctor_public_header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_doctor_public_card"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/image_doctor_avatar"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:contentDescription="@string/doctor_public_title"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/text_doctor_name"
                    style="@style/Text.DoctorPublic.SectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_public_name_placeholder"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text_doctor_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_profile_role_pill"
                    android:text="@string/doctor_public_specialty_placeholder"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/text_doctor_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/doctor_public_location_placeholder"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Status chips row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_accepting_new"
                        style="@style/Widget.Docs.Chip.Flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_public_flag_accepts_new"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_teleconsultation"
                        style="@style/Widget.Docs.Chip.Flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_public_flag_teleconsultation"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Consultation fee pill -->
                <TextView
                    android:id="@+id/text_consultation_fee"
                    style="@style/Text.DoctorPublic.FeePill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_home_stat"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="@string/doctor_public_fee_placeholder" />

            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- About section card -->
            <LinearLayout
                android:id="@+id/doctor_public_about_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_doctor_public_card"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:background="@drawable/bg_home_highlight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/Text.DoctorPublic.SectionTitleSmall"
                        android:text="@string/doctor_public_about_title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/doctor_public_bio_placeholder"
                    android:textSize="14sp"
                    android:lineHeight="20sp" />

                <TextView
                    android:id="@+id/text_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/doctor_public_experience_placeholder"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Clinic section card -->
            <LinearLayout
                android:id="@+id/doctor_public_clinic_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_doctor_public_card"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:background="@drawable/bg_home_highlight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/Text.DoctorPublic.SectionTitleSmall"
                        android:text="@string/doctor_public_clinic_title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_clinic_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/doctor_public_clinic_address_placeholder"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_clinic_city_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/doctor_public_location_placeholder"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Acts section card -->
            <LinearLayout
                android:id="@+id/doctor_public_acts_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_doctor_public_card"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:background="@drawable/bg_home_highlight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        style="@style/Text.DoctorPublic.SectionTitleSmall"
                        android:text="@string/doctor_public_acts_title" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_acts_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/doctor_public_acts_empty"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_acts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- CTA: Book appointment (Message removed for now) -->
            <LinearLayout
                android:id="@+id/doctor_public_cta_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_doctor_public_card"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/button_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_public_cta_book" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
