<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_patient_medication_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="14dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp">

        <!-- Medication name -->
        <TextView
            android:id="@+id/text_med_line_medication_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_on_background"
            tools:text="Paracetamol 500 mg" />

        <!-- Dosage + times per day -->
        <TextView
            android:id="@+id/text_med_line_dosage_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="@color/color_on_background_secondary"
            tools:text="1 tablet Â· 2 times/day" />

        <!-- Instructions (optional) -->
        <TextView
            android:id="@+id/text_med_line_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/color_on_background"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="After meals. Avoid alcohol." />

        <!-- Date range -->
        <TextView
            android:id="@+id/text_med_line_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/color_on_background_secondary"
            tools:text="From 2025-03-01 to 2025-03-10" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
