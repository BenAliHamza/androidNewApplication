<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_appointment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Top row: doctor name + status chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_doctor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dr. Name"
                android:textColor="@color/color_on_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_outline"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="@string/appointment_status_pending"
                android:textColor="@color/color_on_background"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Date & time -->
        <TextView
            android:id="@+id/text_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Mon, 24 Jun  •  09:00 – 09:30"
            android:textColor="@color/color_on_background_secondary"
            android:textSize="12sp" />

        <!-- Tele + reason row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_teleconsultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_outline"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="@string/appointment_teleconsultation_label"
                android:textColor="@color/color_on_background_secondary"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_on_background"
                android:textSize="12sp"
                android:text="Short reason for visit will appear here." />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
