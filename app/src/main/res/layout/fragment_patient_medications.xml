<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/patient_medications_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/text_patient_medications_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_medications_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color_on_background" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/text_patient_medications_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/patient_medications_subtitle"
        android:textSize="13sp"
        android:textColor="@color/color_on_background_secondary" />

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/patient_medications_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/text_patient_medications_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/patient_medications_empty"
        android:textSize="14sp"
        android:textColor="@color/color_on_background_secondary"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_patient_medications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</LinearLayout>
