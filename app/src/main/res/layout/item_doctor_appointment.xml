<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_appointment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/color_surface"
    app:strokeWidth="1dp"
    app:strokeColor="#DDE1E7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Patient name -->
        <TextView
            android:id="@+id/text_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_on_background" />

        <!-- Date / time -->
        <TextView
            android:id="@+id/text_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Mon, 4 Mar â€¢ 09:00 - 09:30"
            android:textSize="14sp"
            android:textColor="@color/color_on_background_secondary" />

        <!-- Status chip -->
        <TextView
            android:id="@+id/text_status_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="8dp"
            android:text="Pending"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_chip_outline" />

        <!-- Teleconsultation -->
        <TextView
            android:id="@+id/text_teleconsultation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Teleconsultation"
            android:textSize="13sp"
            android:textColor="@color/color_primary_variant"
            android:visibility="gone" />

        <!-- Reason -->
        <TextView
            android:id="@+id/text_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Reason goes here lorem ipsum"
            android:textSize="13sp"
            android:textColor="@color/color_on_background"
            android:visibility="gone" />

        <!-- ACTIONS -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_accept"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/doctor_appointments_action_accept"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:textSize="13sp"
                app:strokeColor="@color/color_primary"
                android:textColor="@color/color_primary"
                android:visibility="gone"
                app:cornerRadius="12dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_reject"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/doctor_appointments_action_reject"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:textSize="13sp"
                app:strokeColor="@color/color_on_background_secondary"
                android:textColor="@color/color_on_background_secondary"
                android:visibility="gone"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
