<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_detail_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="?attr/colorSurface"
    tools:context="tn.esprit.presentation.history.UserHistoryDetailBottomSheet">

    <!-- Title (main message) -->
    <TextView
        android:id="@+id/text_history_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textStyle="bold"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Appointment created with Dr. Rania Zaibi" />

    <!-- Event type label -->
    <TextView
        android:id="@+id/text_history_detail_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/color_on_background_secondary"
        android:background="@drawable/bg_doctor_flag_neutral"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="APPOINTMENT_CREATED" />

    <!-- Time label -->
    <TextView
        android:id="@+id/text_history_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/color_on_background_secondary"
        tools:text="Today â€¢ 09:15" />

    <!-- Details header -->
    <TextView
        android:id="@+id/text_history_detail_details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/history_details_label"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textStyle="bold" />

    <!-- Scrollable details JSON -->
    <ScrollView
        android:id="@+id/history_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:fadeScrollbars="false">

        <TextView
            android:id="@+id/text_history_detail_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:typeface="monospace"
            tools:text="{&#10;  &quot;doctorId&quot;: 12,&#10;  &quot;startAt&quot;: &quot;2025-02-02T14:00&quot;,&#10;  &quot;endAt&quot;: &quot;2025-02-02T14:30&quot;&#10;}" />
    </ScrollView>

    <!-- Close button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_history_detail_close"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/history_detail_close"
        android:textAllCaps="false" />

</LinearLayout>
